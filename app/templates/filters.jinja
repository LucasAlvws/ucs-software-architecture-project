<form class="flex items-center p-1 gap-2" hx-post="/filter" hx-target="#content" hx-swap="innerHTML">
    <div class="flex items-center p-1 gap-2">
        <label for="year" class="font-bold">Ano</label>
        <select id="#year" name="year" class="border-1 p-1 rounded-md"
            hx-get="/available-years"
            hx-trigger="click once"
            hx-swap="beforeend"
            hx-target="this">
            <option value="0">Todos</option>
        </select>
    </div>
    <div class="flex items-center p-1 gap-2">
        <label for="mode" class="font-bold">Modalidade</label>
        <select id="mode" name="mode" class="border-1 p-1 rounded-md">
            <option value="all">Todos</option>
            <option value="remote">EAD</option>
            <option value="in-person">Presencial</option>
        </select>
    </div>
    <div class="flex items-center p-1 gap-2">
        <label for="mode" class="font-bold">Estado</label>
        <select id="mode" name="mode" class="border-1 p-1 rounded-md"
            hx-get="/states"
            hx-trigger="click once"
            hx-swap="beforeend"
            hx-target="this">
            <option value="all">Todos</option>
        </select>
    </div>
    <button type="submit" class="p-1 px-2 font-bold rounded-md text-white bg-blue-600 cursor-pointer">Filtrar</button>
</form>